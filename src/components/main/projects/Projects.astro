---
import BorderContainer from "@/components/common/BorderContainer";
import data from "@/data/projects.json";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Icon } from "astro-icon/components";
---

<BorderContainer>
  <div class="grid md:grid-cols-2 gap-4">
    {
      data.map((item) => (
        <Card className="border-dashed">
          <CardHeader className="border-b border-dashed border-neutral-200 dark:border-neutral-800">
            <div class="flex justify-between items-center">
              <CardTitle>{item.name}</CardTitle>
              {item?.link &&<Button variant="outline" size="icon" asChild={item?.link !== ""}>
                <a href={item?.link} target="_blank"><Icon name="lets-icons:out" /></a>
              </Button>}
            </div>
            <CardDescription>{item.short_description}</CardDescription>
          </CardHeader>
          <CardContent>
            <ul class="list-disc pl-4">
              {item.details.map((detil) => (
                <li class="mb-2">{detil}</li>
              ))}
            </ul>
          </CardContent>
        </Card>
      ))
    }
  </div>
</BorderContainer>
