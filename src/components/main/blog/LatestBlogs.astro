---
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import blogs from "@/data/blogs.json";

// Get the last two blogs
const latestBlogs = blogs.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()).slice(0, 2);
---

<section class="py-16 px-4">
  <div class="mb-8 text-center">
    <h2 class="text-3xl font-bold mb-4">Latest Blog Posts</h2>
    <p class="text-gray-600 dark:text-gray-400">Check out my recent articles and insights</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    {
      latestBlogs.map((blog) => (
        <Card className="group relative overflow-hidden border-l-4 border-l-purple-500/20 hover:border-l-purple-500/60 transition-all duration-300">
          {/* Background decoration */}
          <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-purple-500/5 to-pink-500/5 dark:from-purple-400/10 dark:to-pink-400/10 rounded-full transform translate-x-16 -translate-y-16 transition-transform duration-500 group-hover:scale-150 group-hover:translate-x-8 group-hover:-translate-y-8"></div>
          
          <CardHeader className="relative z-10">
            <CardTitle className="text-xl font-bold">
              <a href={`/blog/${blog.id}`} class="hover:text-purple-500 transition-colors duration-200 bg-gradient-to-r from-foreground to-foreground/80 bg-clip-text hover:from-purple-500 hover:to-purple-600 hover:bg-clip-text">
                {blog.title}
              </a>
            </CardTitle>
            <CardDescription className="mt-2 text-sm leading-relaxed">
              {blog.description}
            </CardDescription>
          </CardHeader>
          
          <CardContent className="relative z-10">
            <div class="space-y-3">
              <h4 class="text-sm font-semibold text-muted-foreground uppercase tracking-wide">
                Tags
              </h4>
              <div class="flex gap-2 flex-wrap">
                {blog.tags.map((tag, index) => (
                  <Badge key={index} variant="secondary" className="hover:bg-purple-500/10 hover:border-purple-500/30 transition-all duration-200">
                    {tag}
                  </Badge>
                ))}
              </div>
            </div>
          </CardContent>
          
          <CardFooter className="relative z-10">
            <div class="flex justify-between w-full text-sm text-muted-foreground">
              <span class="font-medium">{blog.author}</span>
              <time class="text-xs bg-muted px-2 py-1 rounded-full">
                {new Date(blog.date).toLocaleDateString()}
              </time>
            </div>
          </CardFooter>
        </Card>
      ))
    }
  </div>

  <div class="text-center">
    <a href="/blog">
      <Button variant="outline" size="lg">
        View All Posts
      </Button>
    </a>
  </div>
</section>
